
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper Functions
    function isManager() {
      return request.auth.uid != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'manager';
    }
    function isSales() {
      return request.auth.uid != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'sales';
    }
    function isDesigner() {
      return request.auth.uid != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'designer';
    }
    function isManufacturing() {
      return request.auth.uid != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'manufacturing';
    }
    function isCreative() {
      return request.auth.uid != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'creative';
    }
    function isCustomer() {
      return request.auth.uid != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'customer';
    }
    function isSignedIn() {
      return request.auth.uid != null;
    }
    function isAdmin() {
        return request.auth.uid != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role in ['manager', 'sales', 'designer', 'manufacturing', 'creative'];
    }

    // Collection Rules

    match /users/{userId} {
      // Un usuario puede crear su propio documento (al registrarse)
      allow create: if isSignedIn();
      // Un usuario solo puede leer y actualizar su propia información
      allow read, update: if request.auth.uid == userId || isManager();
      // Solo un manager puede eliminar usuarios
      allow delete: if isManager();
      // Solo un manager puede listar todos los usuarios
      allow list: if isManager();
    }

    match /products/{productId} {
      // Cualquiera puede leer los productos
      allow read, list: if true;
      // Solo managers y designers pueden crear, actualizar y eliminar productos
      allow create, update, delete: if isManager() || isDesigner();
    }

    match /orders/{orderId} {
      // El dueño del pedido, managers, y personal de ventas/manufactura pueden leer el pedido
      allow read: if (isManager() || isSales() || isManufacturing()) || resource.data.userId == request.auth.uid;
      // Clientes pueden crear pedidos
      allow create: if isCustomer();
      // Solo managers, ventas y manufactura pueden actualizar pedidos
      allow update: if isManager() || isSales() || isManufacturing();
      // Solo managers pueden eliminar pedidos
      allow delete: if isManager();
      // Managers y ventas pueden listar todos los pedidos
      allow list: if isManager() || isSales();
    }

    match /categories/{categoryId} {
        // Permitir lectura a todos los usuarios administradores
        allow read, list: if isAdmin();
        // Solo managers o designers pueden crear, actualizar, eliminar
        allow write: if isManager() || isDesigner();
    }

    match /themes/{themeId} {
        // Permitir lectura a todos los usuarios administradores
        allow read, list: if isAdmin();
        // Solo managers o designers pueden crear, actualizar, eliminar
        allow write: if isManager() || isDesigner();
    }
  }
}
