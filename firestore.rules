rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
  
    // Helper functions to check user roles from their Firestore document
    function getUserData() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data;
    }

    function isManager() {
      return getUserData().role == 'manager';
    }

    function isSales() {
      return getUserData().role == 'sales';
    }

    function isDesigner() {
      return getUserData().role == 'designer';
    }
    
    function isManufacturing() {
      return getUserData().role == 'manufacturing';
    }

    function isCreative() {
      return getUserData().role == 'creative';
    }

    function isStaff() {
      return getUserData().role in ['manager', 'sales', 'designer', 'manufacturing', 'creative'];
    }

    match /users/{userId} {
      // Un usuario puede crear su propio documento (al registrarse)
      allow create: if request.auth.uid == userId;
      
      // Un usuario puede leer y actualizar su propia información
      allow read, update: if request.auth.uid == userId;
      
      // El manager y el equipo de ventas pueden ver todos los perfiles de usuario
      allow list: if isManager() || isSales();
      
      // El manager puede actualizar los datos de cualquier usuario (para asignar roles, etc.)
      allow update: if isManager();
    }

    match /products/{productId} {
      // Cualquiera puede ver los productos
      allow list, read: if true;
      
      // Solo diseñadores y managers pueden crear, actualizar o eliminar productos
      allow create, update, delete: if isDesigner() || isManager();
    }

    match /orders/{orderId} {
      // Un usuario puede leer sus propios pedidos
      allow read: if request.auth.uid == resource.data.userId;
      
      // Un usuario puede crear un nuevo pedido
      allow create: if request.auth.uid == request.resource.data.userId;
      
      // Ventas, manufactura y managers pueden ver todos los pedidos
      allow list: if isSales() || isManufacturing() || isManager();
      
      // Ventas, manufactura y managers pueden actualizar el estado de los pedidos
      allow update: if isSales() || isManufacturing() || isManager();
    }
    
    // Reglas para colecciones futuras o no especificadas
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
