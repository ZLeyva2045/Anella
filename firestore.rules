
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Users can only read and write to their own user document.
    // They cannot read the entire 'users' collection.
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Anyone can read the products collection, but only admins (in the future) can write.
    match /products/{productId} {
      allow read: if true;
      allow write: if false; // For now, lock down writes completely.
    }
    
    // Anyone can read categories and themes.
    match /categories/{categoryId} {
        allow read: if true;
        allow write: if false;
    }

    match /themes/{themeId} {
        allow read: if true;
        allow write: if false;
    }

    // Add rules for other collections as needed
  }
}
